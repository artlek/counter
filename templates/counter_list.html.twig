{% extends 'base.html.twig' %}

{% block title %}Counter App: counter list{% endblock %}

{% block body %}
    <div class="container-md" style="max-width: 1200px">
        <h1 class="display-6">Your counters</h1>
        <div class="mb-5 me-4">
            <a href="{{ path('app_counter_add') }}" role="button">
                <button type="button" class="btn btn-success">Add counter</button>
            </a>
        </div>
        {% if counters %}
            {% for counter in counters %}
                <a href="counter/{{ counter.id }}">
                    <div class="card mb-3 me-3 card-counter" style="width: 250px; display: inline-block;">
                        <div class="card-header card-header-counter">
                            {{ counter.name }}
                        </div>
                        <div class="text-center m-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-speedometer" viewBox="0 0 16 16">
                                <path d="M8 2a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-1 0V2.5A.5.5 0 0 1 8 2zM3.732 3.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 8a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 7.31A.91.91 0 1 0 8.85 8.569l3.434-4.297a.389.389 0 0 0-.029-.518z"/>
                                <path fill-rule="evenodd" d="M6.664 15.889A8 8 0 1 1 9.336.11a8 8 0 0 1-2.672 15.78zm-4.665-4.283A11.945 11.945 0 0 1 8 10c2.186 0 4.236.585 6.001 1.606a7 7 0 1 0-12.002 0z"/>
                            </svg>
                        </div>
                        <div class="card-footer text-body-secondary">
                            <small>Since: {{ counter.datetime }}</small>
                        </div>
                        <div class="card-footer text-body-secondary">
                            <small>Total usage: {{ counter.totalUsage}} {{ counter.unit }} </small>
                        </div>
                    </div>
                </a>
            {% endfor %}
        {% else %}
            <div class="text-secondary">There is no counter</div>
        {% endif %}
    </div>
{% endblock %}
